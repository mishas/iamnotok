<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
      <CheckBoxPreference 
          android:key="@string/checkbox_sms_notification" 
          android:title="SMS Notification" 
          android:summary="Allow notifications via SMS" 
          android:enabled="true" 
          android:defaultValue="true"  />
       <CheckBoxPreference 
          android:key="@string/checkbox_email_notification" 
          android:title="Email Notification" 
          android:summary="Allow notifications via email" 
          android:enabled="true" 
          android:defaultValue="true" />
       <EditTextPreference 
          android:key="@string/edittext_cancelation_delay" 
          android:title="Cancelation delay" 
          android:summary="Seconds before notifying of emergency situation." 
          android:numeric="signed"
          android:defaultValue="10" />      
</PreferenceScreen>
