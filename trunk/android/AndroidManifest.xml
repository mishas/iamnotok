<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
  package="com.google.imnotok" android:versionCode="1" android:versionName="1.0">
  <application android:icon="@drawable/icon" android:label="@string/app_name">
    <activity android:label="@string/app_name" android:name=".MainActivity">
      <intent-filter>
        <action android:name="android.intent.action.MAIN" />
        <category android:name="android.intent.category.LAUNCHER" />
      </intent-filter>
    </activity>

    <service android:name=".EmergencyInfoSyncService"></service>
    <service android:name=".EmergencyNotificationService"></service>
    <service android:name=".PatternTrackingService"></service>
    <activity android:name=".EmergencyInfoActivity"></activity>
    <activity android:name=".ApplicationSettingsActivity"></activity>
    <receiver android:name=".StartupIntentReceiver">
      <intent-filter>
        <action android:name="android.intent.action.BOOT_COMPLETED" />
        <category android:name="android.intent.category.HOME" />
      </intent-filter>
    </receiver>
  </application>
  <uses-sdk android:minSdkVersion="3" />
  <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
</manifest> 